{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Voquill",
  "version": "1.0.3",
  "identifier": "com.voquill.voquill",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
        "windows": [
      {
        "label": "main",
        "title": "Voquill",
        "width": 350,
        "height": 600,
        "resizable": true,
        "minWidth": 300,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "closable": true,
        "decorations": false
      },
      {
        "label": "overlay",
        "title": "Voquill Status",
        "width": 140,
        "height": 140,
        "resizable": false,
        "center": false,
        "visible": false,
        "closable": false,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "focusable": false,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:window:allow-start-dragging",
            "core:event:default",
            "core:tray:default",
            "global-shortcut:default",
            "allow-app-commands"
          ]
        },
        {
          "identifier": "overlay-capability",
          "description": "Capability for the overlay window",
          "windows": ["overlay"],
          "permissions": [
            "core:default",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:event:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "shortDescription": "Voice dictation app",
    "longDescription": "Cross-platform push-to-talk dictation app with Whisper-powered speech recognition",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {}
}
