{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Voquill",
  "version": "0.1.0",
  "identifier": "com.voquill.app",
  "build": {
    "beforeBuildCommand": "cd ui && npm run build",
    "beforeDevCommand": "",
    "frontendDist": "ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Voquill",
        "width": 350,
        "height": 600,
        "resizable": false,
        "center": true,
        "visible": false,
        "closable": true,
        "decorations": false
      },
      {
        "label": "overlay",
        "title": "Voquill Status",
        "width": 100,
        "height": 100,
        "resizable": false,
        "center": false,
        "visible": false,
        "closable": false,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:window:allow-start-dragging",
            "core:event:default"
          ]
        },
        {
          "identifier": "overlay-capability",
          "description": "Capability for the overlay window",
          "windows": ["overlay"],
          "permissions": [
            "core:default",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:event:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "shortDescription": "Voice dictation app",
    "longDescription": "Cross-platform push-to-talk dictation app using OpenAI Whisper",
    "icon": [
      "icons/icon.svg",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {}
}
