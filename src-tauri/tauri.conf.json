{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Voquill",
  "version": "1.2.2",
  "identifier": "com.voquill.voquill",
  "build": {
    "beforeBuildCommand": "deno task build:ui",
    "beforeDevCommand": "deno task dev:ui",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Voquill",
        "width": 430,
        "height": 700,
        "resizable": true,
        "minWidth": 400,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "closable": true,
        "decorations": false
      },
      {
        "label": "overlay",
        "title": "Voquill Status",
        "width": 140,
        "height": 140,
        "resizable": false,
        "center": false,
        "visible": false,
        "closable": false,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "focusable": false,
        "acceptFirstMouse": false,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "shortDescription": "Voice dictation app",
    "longDescription": "Cross-platform push-to-talk dictation app with Whisper-powered speech recognition",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {}
}
